---
import Layout from "@/layouts/Layout.astro";
import CenterPassword from "@/components/CenterPassword.svelte";
import MenuBottom from "@/components/MenuBottom.svelte";
import Header from "@/components/Header.astro";
---

<Layout title="home" >
    <main>
        <Header button="Crear" link="/password/new" />
        <CenterPassword client:load />
        <MenuBottom />
    </main>
</Layout>

<style>
    main{
        display: flex;
        padding: 10px;
        height: 100vh;
        align-items: center;
        justify-content: space-between;
        flex-direction: column;
        overflow: hidden;
    }
</style>